{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block content %}
    <div style="margin-left: 40px">
        <h1>Mes adresses</h1>
        <p>C'est dans cet espace que vous pourrez modifier vos adresses</p>
        <a href="{{ path('account_address_add') }}" class="btn btn-info btn-sm">Ajouter une adresse</a>
    </div>
    <hr>
    {% if app.user.addresses|length == 0 %}
        <p class="text-center">
            Vous n'avez pas ajoutÃ© d'adresse. Pour en ajouter une, veuillez <a href="{{ path('account_address_add') }}">Cliquez ici</a>
        </p>
    {% else %}
        <div class="row" style="margin-bottom: 100px">
            {% for address in app.user.addresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ address.name }}</h5>
                            <p class="card-text">
                                {{ address.address }},<br/>
                                {{ address.postal }} - {{ address.city }} - {{ address.country }}
                            </p>
                            <a href="{{ path('account_address_edit', { 'id' : address.id }) }}">Modifier</a> | <a href="{{ path('account_address_delete', { 'id' : address.id }) }}">Supprimer</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    {% endif %}
{% endblock %}
