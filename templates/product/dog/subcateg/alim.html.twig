{% extends 'base.html.twig' %}

{% block title %} Collection pour chiens {% endblock %}

{% block content %}

    <div class="show_product">
        <h3>Nos produits alimentaires pour chiens</h3>
        <div class="row">
            <div class="col-9">
                <div class="row">
                    {% for product in products %}
                        <div class="col-md-4 product-container">
                            <div class="product-item text-center">
                                <a href="{{ path('product',{'slug' : product.slug}) }}"> <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                                <h5>{{ product.name }}</h5>
                                <span class="product-subtitle">{{ product.subtitle }}</span>
                                <span class="product-price">{{( product.price / 100)|number_format(2) }} â‚¬</span>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>


{% endblock %}
