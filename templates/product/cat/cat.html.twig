{% extends 'base.html.twig' %}

{% block title %} Collection pour chats {% endblock %}

{% block content %}

    <section class="section-products">
        <div class="container">
            <div class="row">
                {% for product in products %}
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="product-item text-center">
                            <a href="{{ path('product',{'slug' : product.slug}) }}"> <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                            <span class="title">{{ product.name }}</span>
                            <span class="product-subtitle">{{ product.subtitle }}</span>
                            <span class="product-price">{{( product.price / 100)|number_format(2) }} â‚¬</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
